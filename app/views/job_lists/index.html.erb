<div>
<h1 class="home_texts">Hi  <%= current_user.first_name %>,</h1>
<h3 style=" text-align:center;color: white;">Here is currently available jobs</h3>

<% if current_user && current_user.admin %>
  <div >
    <%= link_to "ADD NEW JOB", new_job_list_path ,class:"btn btn-success" %>
    <br> 

  </div>
<% end %>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @job_lists.each do |job_list| %>
  <div class="col">
    <div class="card">
      <div style="text-align: center;">
        <%= image_tag job_list.avatar,width: "40%" if job_list.avatar.attached? %>
      
      <div class="card-body">
        <h5 class="card-title"><%= job_list.job_role  %></h5>
        <p class="card-text">Location:<%= job_list.location %> | Job Type:<%= job_list.job_type %>  |  Last Date to Apply: <%= job_list.last_date %></p>
      </div>
      <%= link_to "View Details",job_list_path(job_list),class:"btn btn-outline-primary" %>
    </div>
    
    </div>
  </div>
  <%end%>
</div>


</div>

















